<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Waiter.Views"
            x:Class="Waiter.Views.TabbedMenuPage">

    <TabbedPage.Children>
        <NavigationPage Title="Home">
            <x:Arguments>
                <views:HomePage/>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Orders">
            <x:Arguments>
                <views:OrdersPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Account">
            <x:Arguments>
                <views:AccountPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>