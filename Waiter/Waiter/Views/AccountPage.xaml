<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="Waiter.Views.AccountPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Spacing="30">
        <Entry x:Name="Entry_NfcData" Placeholder="NFC Data" WidthRequest="300"/>
        <Button Text="Write NFC tag" Clicked="Button_Clicked" WidthRequest="300"/>
    </StackLayout>
</ContentPage>