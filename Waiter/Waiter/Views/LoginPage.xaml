<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Waiter.Views.LoginPage">
    <StackLayout>
        <StackLayout.Padding>
            <OnIdiom x:TypeArguments="Thickness">
                <OnIdiom.Phone>40,200,40,100</OnIdiom.Phone>
            </OnIdiom>
        </StackLayout.Padding>
        <Entry x:Name="Entry_Name" Placeholder="Name"/>
        <Entry x:Name="Entry_Password" Placeholder="Password"/>
        <Button x:Name="Button_SingIn" Text="Log in" Clicked="Button_SingIn_Clicked"/>
    </StackLayout>
</ContentPage>